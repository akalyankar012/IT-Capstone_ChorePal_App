rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development/Testing rules - allow all operations for now
    // This allows PIN-based authentication without requiring Firebase Auth
    
    // Allow all read/write operations for development
    match /{document=**} {
      allow read, write: if true;
    }
    
    // TODO: For production, implement more restrictive rules:
    // - Parents can only access their own data
    // - Children can only access their own data via PIN
    // - Chores and rewards can be accessed by authenticated users
  }
}